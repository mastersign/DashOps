<Project Sdk="Microsoft.NET.Sdk">
  
  <PropertyGroup>
    <TargetFramework>net481</TargetFramework>
    <LangVersion>12</LangVersion>
    <UseWPF>true</UseWPF>
    <OutputType>WinExe</OutputType>
    <ApplicationIcon>icon.ico</ApplicationIcon>
    <GenerateAssemblyInfo>true</GenerateAssemblyInfo>
    
    <ImplicitUsings>enable</ImplicitUsings>
    <RootNamespace>Mastersign.DashOps</RootNamespace>

    <Version>2.0.0-dev</Version>

    <Company>Tobias Kiertscher</Company>
    <Authors>Tobias Kiertscher</Authors>
    <Product>DashOps</Product>
    <Description>Graphical user interface for scripts and shell commands</Description>
    <Copyright>Copyright © 2025 Tobias Kiertscher</Copyright>
  </PropertyGroup>
  
  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Debug|AnyCPU' ">
    <OutputPath>..\..\bin\Debug\</OutputPath>
  </PropertyGroup>
  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Release|AnyCPU' ">
    <OutputPath>..\..\bin\Release\</OutputPath>
  </PropertyGroup>
  
  <ItemGroup>
    <Resource Include="icon.ico" />
  </ItemGroup>
  
  <ItemGroup>
    <Resource Include="Model.xml">
      <Generator>Scaleton Code Generator</Generator>
      <LastGenOutput>Model.Designer.cs</LastGenOutput>
      <SubType>Designer</SubType>
    </Resource>
  </ItemGroup>
  
  <ItemGroup>
    <Resource Include="ViewModel.xml">
      <Generator>Scaleton Code Generator</Generator>
      <LastGenOutput>ViewModel.Designer.cs</LastGenOutput>
    </Resource>
  </ItemGroup>
  
  <ItemGroup>
    <Resource Include="images\StatusError.png" />
  </ItemGroup>
  <ItemGroup>
    <Resource Include="images\StatusOK.png" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="YamlDotNet" Version="16.3.0" />
  </ItemGroup>
  
</Project>